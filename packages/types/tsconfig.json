{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@olis/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@olis/types/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
