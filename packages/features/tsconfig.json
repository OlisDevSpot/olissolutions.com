{
  "extends": "@olis/typescript-config/base.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@olis/db/*": ["./src/*"]
    },
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "drizzle.config.ts"]
}
