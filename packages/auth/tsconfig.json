{
  "extends": "@olis/typescript-config/base.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@olis/auth/*": ["./src/*"]
    },
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
