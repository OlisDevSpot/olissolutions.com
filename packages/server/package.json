{
  "name": "@olis/server",
  "type": "module",
  "version": "1.0.0",
  "exports": {
    "./routers/*": "./src/routers/*.ts",
    "./constants/*": {
      "types": "./dist/constants/*.d.ts",
      "default": "./dist/constants/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    },
    "./middlewares/*": {
      "types": "./dist/middlewares/*.d.ts",
      "default": "./dist/middlewares/*.js"
    },
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@olis/auth": "workspace:*",
    "@olis/core": "workspace:*",
    "@olis/db": "workspace:*",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.0",
    "hono-pino": "^0.10.3",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "stoker": "^2.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@olis/eslint-config": "workspace:*",
    "@olis/types": "workspace:*",
    "@olis/typescript-config": "workspace:*",
    "@types/node": "^24.9.0",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2",
    "typescript": "^5.9.3"
  }
}
