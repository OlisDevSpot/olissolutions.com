{
  "extends": "@olis/typescript-config/base.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@olis/server/*": ["./src/*"]
    },
    "types": ["node"],
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
