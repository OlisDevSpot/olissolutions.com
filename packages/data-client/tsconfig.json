{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@olis/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "esnext",
    "paths": {
      "@olis/core/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
