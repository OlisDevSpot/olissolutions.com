{
  "extends": "@olis/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@olis/ui/*": ["../../packages/ui/src/*"],
      "@olis/trpc/*": ["../../packages/trpc/src/*"],
      "@olis/db/*": ["../../packages/db/src/*"],
      "@olis/auth/*": ["../../packages/auth/src/*"],
      "@olis/core/*": ["../../packages/shared/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
