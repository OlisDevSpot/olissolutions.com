{
  "extends": "@olis/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@olis/ui/*": ["../../packages/ui/src/*"],
      "@olis/server/*": ["../../packages/server/src/*"],
      "@olis/auth/*": ["../../packages/auth/src/*"],
      "@olis/core/*": ["../../packages/core/src/*"],
      "@olis/db/*": ["../../packages/db/src/*"],
      "@olis/types/*": ["../../packages/types/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
